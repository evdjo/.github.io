 


public class RecursionExample {

	public static void main(String[] args){
		int number=15;
		System.out.println("The number 10 has : "+digits(number)+" digits.");
        number = 155;
        System.out.println("The number 150 has : "+digits(number)+" digits.");
        number = 1555;
        System.out.println("The number 150 has : "+digits(number)+" digits.");
        number = 15555;
        System.out.println("The number 150 has : "+digits(number)+" digits.");
        number = 155555;
		}
		 
	static long digits(long number){
			if(number < 10 ) {
				return 1;
			} else {
				return 1+ digits(number/10);
			}
		}

}
