package cs22510_2014;

import java.util.ArrayList;

public class Controller {
	Model strm1, stream2;
	ArrayList<Location> locations;
	Location offset;

	public Controller(String file1, String file2) {

		strm1 = new Model(file1);
		stream2 = new Model(file2);
		locations = new ArrayList<>();
	}

	public boolean synchronizeTimes() {
		String data = "";
		while (!data.equals(Model.GPS_TIME) && !data.equals(Model.EOF)) {
			data = strm1.read();

		}
		if (data.equals(Model.EOF)) {
			return false;
		}

		data = "";
		while (!data.equals(Model.GPS_TIME) && !data.equals(Model.EOF)) {
			data = stream2.read();
		}
		if (data.equals(Model.EOF)) {
			return false;
		}

		int time = strm1.time.compareTo(stream2.time);

		if (time == -1) {
			do {
				data = strm1.read();
				if (data == Model.EOF)
					return false;
				if (data.equals(Model.GPS_TIME)) {
					time = strm1.time.compareTo(stream2.time);

				}
			} while (time != 0);

		} else if (time == 1) {
			do {
				data = stream2.read();
				if (data == Model.EOF)
					return false;
				if (data.equals(Model.GPS_TIME)) {
					time = strm1.time.compareTo(stream2.time);

				}
			} while (time != 0);

		}
		this.offset = strm1.currentLoc.offset(stream2.currentLoc);
		return true;
	}

	public void start() {
		this.synchronizeGPS();
		this.synchronizeTimes();
		while (true) {

			 
			if (strm1.satelitesAreOK) {

				locations.add(strm1.currentLoc);
				if (stream2.satelitesAreOK) {
					this.offset = strm1.currentLoc.offset(stream2.currentLoc);
				} else if (this.offset != null) {
					stream2.currentLoc = Location.getLoc(this.offset,
							strm1.currentLoc);
				}

			} else if (stream2.satelitesAreOK) {
				locations.add(stream2.currentLoc);
				if (this.offset != null)
					strm1.currentLoc = Location.getLoc(this.offset,
							stream2.currentLoc);

			}
			String lineRead = "";
			do {
				lineRead = strm1.read();
				if (lineRead.equals(Model.EOF))
					return;

			} while (!lineRead.equals(Model.GPS_TIME));
			lineRead = "";
			do {
				lineRead = stream2.read();
				if (lineRead.equals(Model.EOF))
					return;

			} while (!lineRead.equals(Model.GPS_TIME));
			 
		}

	}

	public boolean synchronizeGPS() {
		String data = "";
		if (!strm1.satelitesAreOK) {
			while (!strm1.satelitesAreOK) {
				data = strm1.read();
				if (data == Model.EOF)
					return false;
			}
		}
		if (!stream2.satelitesAreOK) {
			while (!stream2.satelitesAreOK) {
				data = stream2.read();

				if (data == Model.EOF)
					return false;
			}
		}

		return true;
	}

}
