package linearStructures;

public class TEST {
	static public int findMedian(Comparable[] items, 
			int indexFirst,
			int indexMid,			
			int indexLast) {
		if (items[indexFirst].compareTo(items[indexMid]) > 0) {
			if (items[indexFirst].compareTo(items[indexLast]) < 0) {
				return indexFirst;
			} else if (items[indexMid].compareTo(items[indexLast]) > 0) {
				return indexMid;
			} else {
				return indexLast;
			}
		} else { 
			if(items[indexMid].compareTo(items[indexLast]) < 0) {
				return indexMid;
			} else if(items[indexFirst].compareTo(items[indexLast]) > 0){
				return indexFirst;
				
			} else {
				return indexLast;
			}
 
		}
	}
	
	static private Comparable[] a = {
			10 , 6 , 2 , 5 ,7 ,1
	};
	public static void main(String[] args) {
		System.out.println(findMedian(a,0,1,2));
	}
}
