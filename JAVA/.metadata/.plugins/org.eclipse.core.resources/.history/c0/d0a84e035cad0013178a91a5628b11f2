package cs22510_2014;

public class Controller {

	public Controller() {
		String file = "/home/evdjoint/gps_1.dat";
		String file2 = "/home/evdjoint/gps_2.dat";
		StreamGPS stream = new StreamGPS(file);
		StreamGPS stream2 = new StreamGPS(file2);
		String data = "";
		while (!data.equals("coordinate")) {
			data = stream.read();
		}
		data = "";
		while (!data.equals("coordinate")) {
			data = stream2.read();
		}

		int time = stream.time.compareTo(stream2.time);
		System.out.println(time);
		if (time == 0) {

		} else if (time == -1) {
			do {
			data = stream.read();
			if(data.equals("coordinate")) {
				time = stream.time.compareTo(stream2.time);
				System.out.println(time);
			}
			} while ( time != 0 );

		} else {
			do {
				data = stream2.read();
				if(data.equals("coordinate")) {
					time = stream.time.compareTo(stream2.time);
					System.out.println(time);
				}
				} while ( time != 0 );

		}
	}
}
