package linearStructures;

public class TEST {
	static public int findMedian(Comparable[] items, 
			int first,
			int indexMid,			
			int indexLast) {
		
		 if (items[first].compareTo(items[indexMid]) > 0) {
			
			
			
			if (items[first].compareTo(items[indexLast]) < 0) {
				return first;
			} else if (items[indexMid].compareTo(items[indexLast]) > 0) {
				return indexMid;
			} else {
				return indexLast;
			}
		} else { 
			if(items[indexMid].compareTo(items[indexLast]) < 0) {
				return indexMid;
			} else if(items[first].compareTo(items[indexLast]) > 0){
				return first;
				
			} else {
				return indexLast;
			}
 
		} 
	}
	
	static private Comparable[] a = {
			10 , 6 , 2 , 5 ,7 ,1
	};
	public static void main(String[] args) {
		System.out.println(findMedian(a,0,1,3));
	}
}
