package cs22510_2014;

public class Main {
	 
	 
	 
	public static void main(String[] args) {
		
		int a[]= {
				10,5,6,2,7,2,1
		};
		int first=a[0];
		int second;
		for(int i=1; i<a.length ; i ++) {
		if(first < a[i] ) {
		second = first;
		first =  a[i];
		} 
		}
		 
		int sum = first + second ;
		System.out.println("closest sum to 0 is "+sum); 
   
	}

}
